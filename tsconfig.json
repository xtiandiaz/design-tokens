{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "paths": {
      "@generators/*": ["./src/code-generators/*"],
    }
  },
  "include": ["src/**/*.ts", "src/*.mts"],
  "exclude": ["node_modules"],
}
